{
  "exclude": ["node_modules", "build", "dist", ".parcel-cache"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "es5",
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "~*": ["./*"],
    },
  },
}
